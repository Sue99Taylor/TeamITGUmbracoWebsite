@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<NewsPage>
@{
    Layout = "_Layout.cshtml";
}


    <!-- ======= News Item ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">
          <div class="col-lg-4">
            <div class="portfolio-info">
              <h3>*News Article*</h3>
              <ul>
                <li><strong>Name</strong>: @Model.Name</li>
                <li><strong>Date</strong>: @Model.Date</li>
              </ul>
            </div>
            <div class="portfolio-description">
              <h2>@Model.Title</h2>
              <p>
                @Model.Content
              </p>
            </div>
          </div>
        </div>

      </div>
    </section><!-- End of News Item -->